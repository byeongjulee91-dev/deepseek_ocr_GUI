/* DeepSeek OCR Desktop - Main Application Stylesheet */
/* Dark theme with modern, clean aesthetics */

/* Global styles */
QWidget {
    background-color: #1e1e1e;
    color: #e0e0e0;
    font-family: "Segoe UI", "San Francisco", "Helvetica Neue", Arial, sans-serif;
    font-size: 13px;
}

/* Main Window */
QMainWindow {
    background-color: #1e1e1e;
}

/* Status Bar */
QStatusBar {
    background-color: #252525;
    color: #e0e0e0;
    border-top: 1px solid #333;
    padding: 4px;
}

QStatusBar::item {
    border: none;
}

/* Menu Bar */
QMenuBar {
    background-color: #252525;
    color: #e0e0e0;
    border-bottom: 1px solid #333;
    padding: 2px;
}

QMenuBar::item {
    padding: 6px 12px;
    background-color: transparent;
    border-radius: 4px;
}

QMenuBar::item:selected {
    background-color: #0ea5e9;
    color: white;
}

QMenuBar::item:pressed {
    background-color: #0284c7;
}

/* Menu */
QMenu {
    background-color: #2a2a2a;
    color: #e0e0e0;
    border: 1px solid #444;
    border-radius: 6px;
    padding: 4px;
}

QMenu::item {
    padding: 8px 24px 8px 12px;
    border-radius: 4px;
}

QMenu::item:selected {
    background-color: #0ea5e9;
    color: white;
}

QMenu::separator {
    height: 1px;
    background-color: #444;
    margin: 4px 8px;
}

/* Scrollbar */
QScrollBar:vertical {
    background-color: #252525;
    width: 12px;
    border-radius: 6px;
}

QScrollBar::handle:vertical {
    background-color: #555;
    border-radius: 6px;
    min-height: 20px;
}

QScrollBar::handle:vertical:hover {
    background-color: #666;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background-color: #252525;
    height: 12px;
    border-radius: 6px;
}

QScrollBar::handle:horizontal {
    background-color: #555;
    border-radius: 6px;
    min-width: 20px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #666;
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    width: 0px;
}

/* Splitter */
QSplitter::handle {
    background-color: #333;
}

QSplitter::handle:horizontal {
    width: 2px;
}

QSplitter::handle:vertical {
    height: 2px;
}

QSplitter::handle:hover {
    background-color: #0ea5e9;
}

/* Labels */
QLabel {
    background-color: transparent;
    color: #e0e0e0;
}

/* Text Edit / Text Browser */
QTextEdit,
QTextBrowser,
QPlainTextEdit {
    background-color: #252525;
    color: #e0e0e0;
    border: 1px solid #444;
    border-radius: 6px;
    padding: 8px;
    selection-background-color: #0ea5e9;
    selection-color: white;
}

QTextEdit:focus,
QTextBrowser:focus,
QPlainTextEdit:focus {
    border-color: #0ea5e9;
}

/* Line Edit */
QLineEdit {
    background-color: #252525;
    color: #e0e0e0;
    border: 1px solid #444;
    border-radius: 6px;
    padding: 8px 12px;
    selection-background-color: #0ea5e9;
    selection-color: white;
}

QLineEdit:focus {
    border-color: #0ea5e9;
}

QLineEdit:disabled {
    background-color: #1e1e1e;
    color: #666;
}

/* Spin Box */
QSpinBox,
QDoubleSpinBox {
    background-color: #252525;
    color: #e0e0e0;
    border: 1px solid #444;
    border-radius: 6px;
    padding: 6px 8px;
}

QSpinBox:focus,
QDoubleSpinBox:focus {
    border-color: #0ea5e9;
}

QSpinBox:disabled,
QDoubleSpinBox:disabled {
    background-color: #1e1e1e;
    color: #666;
}

QSpinBox::up-button,
QSpinBox::down-button,
QDoubleSpinBox::up-button,
QDoubleSpinBox::down-button {
    background-color: #333;
    border: none;
    border-radius: 3px;
    width: 16px;
}

QSpinBox::up-button:hover,
QSpinBox::down-button:hover,
QDoubleSpinBox::up-button:hover,
QDoubleSpinBox::down-button:hover {
    background-color: #444;
}

QSpinBox::up-arrow,
QDoubleSpinBox::up-arrow {
    image: url(none);
    width: 8px;
    height: 8px;
    border-left: 4px solid transparent;
    border-right: 4px solid transparent;
    border-bottom: 6px solid #e0e0e0;
}

QSpinBox::down-arrow,
QDoubleSpinBox::down-arrow {
    image: url(none);
    width: 8px;
    height: 8px;
    border-left: 4px solid transparent;
    border-right: 4px solid transparent;
    border-top: 6px solid #e0e0e0;
}

/* Combo Box */
QComboBox {
    background-color: #252525;
    color: #e0e0e0;
    border: 1px solid #444;
    border-radius: 6px;
    padding: 6px 12px;
    min-height: 20px;
}

QComboBox:focus {
    border-color: #0ea5e9;
}

QComboBox::drop-down {
    border: none;
    width: 20px;
}

QComboBox::down-arrow {
    image: url(none);
    width: 8px;
    height: 8px;
    border-left: 4px solid transparent;
    border-right: 4px solid transparent;
    border-top: 6px solid #e0e0e0;
}

QComboBox QAbstractItemView {
    background-color: #2a2a2a;
    color: #e0e0e0;
    border: 1px solid #444;
    border-radius: 6px;
    selection-background-color: #0ea5e9;
    selection-color: white;
    padding: 4px;
}

/* Check Box */
QCheckBox {
    spacing: 8px;
    color: #e0e0e0;
}

QCheckBox::indicator {
    width: 18px;
    height: 18px;
    border: 2px solid #444;
    border-radius: 4px;
    background-color: #252525;
}

QCheckBox::indicator:hover {
    border-color: #0ea5e9;
}

QCheckBox::indicator:checked {
    background-color: #0ea5e9;
    border-color: #0ea5e9;
    image: url(none);
}

/* Radio Button */
QRadioButton {
    spacing: 8px;
    color: #e0e0e0;
}

QRadioButton::indicator {
    width: 18px;
    height: 18px;
    border: 2px solid #444;
    border-radius: 10px;
    background-color: #252525;
}

QRadioButton::indicator:hover {
    border-color: #0ea5e9;
}

QRadioButton::indicator:checked {
    background-color: #0ea5e9;
    border-color: #0ea5e9;
}

QRadioButton::indicator:checked::after {
    width: 8px;
    height: 8px;
    border-radius: 4px;
    background-color: white;
}

/* Push Button */
QPushButton {
    background-color: #0ea5e9;
    color: white;
    border: none;
    border-radius: 6px;
    padding: 10px 20px;
    font-weight: bold;
}

QPushButton:hover {
    background-color: #0284c7;
}

QPushButton:pressed {
    background-color: #0369a1;
}

QPushButton:disabled {
    background-color: #444;
    color: #888;
}

/* Success/Confirm Button (Green) */
QPushButton#successButton,
QPushButton#saveButton,
QPushButton#startButton {
    background-color: #10b981;
}

QPushButton#successButton:hover,
QPushButton#saveButton:hover,
QPushButton#startButton:hover {
    background-color: #059669;
}

QPushButton#successButton:pressed,
QPushButton#saveButton:pressed,
QPushButton#startButton:pressed {
    background-color: #047857;
}

/* Danger/Warning Button (Red) */
QPushButton#dangerButton,
QPushButton#resetButton {
    background-color: #ef4444;
}

QPushButton#dangerButton:hover,
QPushButton#resetButton:hover {
    background-color: #dc2626;
}

QPushButton#dangerButton:pressed,
QPushButton#resetButton:pressed {
    background-color: #b91c1c;
}

/* Cancel/Secondary Button (Gray) */
QPushButton#cancelButton,
QPushButton#secondaryButton {
    background-color: #6b7280;
}

QPushButton#cancelButton:hover,
QPushButton#secondaryButton:hover {
    background-color: #4b5563;
}

QPushButton#cancelButton:pressed,
QPushButton#secondaryButton:pressed {
    background-color: #374151;
}

/* Info/Test Button (Blue variant) */
QPushButton#infoButton,
QPushButton#testButton {
    background-color: #3b82f6;
    padding: 8px 16px;
}

QPushButton#infoButton:hover,
QPushButton#testButton:hover {
    background-color: #2563eb;
}

QPushButton#infoButton:pressed,
QPushButton#testButton:pressed {
    background-color: #1d4ed8;
}

QPushButton#infoButton:disabled,
QPushButton#testButton:disabled {
    background-color: #6b7280;
}

/* Warning Button (Orange) */
QPushButton#warningButton,
QPushButton#clearButton {
    background-color: #f59e0b;
    padding: 8px 16px;
}

QPushButton#warningButton:hover,
QPushButton#clearButton:hover {
    background-color: #d97706;
}

QPushButton#warningButton:pressed,
QPushButton#clearButton:pressed {
    background-color: #b45309;
}

/* Group Box */
QGroupBox {
    border: 2px solid #444;
    border-radius: 8px;
    margin-top: 12px;
    padding-top: 12px;
    font-weight: bold;
    color: #e0e0e0;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    left: 12px;
    padding: 0 6px;
    background-color: #1e1e1e;
}

/* Tab Widget */
QTabWidget::pane {
    border: 1px solid #444;
    border-radius: 6px;
    background-color: #252525;
    top: -1px;
}

QTabBar::tab {
    background-color: #2a2a2a;
    color: #999;
    border: 1px solid #444;
    border-bottom: none;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    padding: 10px 20px;
    margin-right: 2px;
}

QTabBar::tab:selected {
    background-color: #252525;
    color: #0ea5e9;
    border-color: #444;
    font-weight: bold;
}

QTabBar::tab:hover:!selected {
    background-color: #333;
    color: #e0e0e0;
}

/* Progress Bar */
QProgressBar {
    background-color: #252525;
    border: 1px solid #444;
    border-radius: 6px;
    height: 24px;
    text-align: center;
    color: #e0e0e0;
}

QProgressBar::chunk {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                                stop:0 #9333ea, stop:1 #0ea5e9);
    border-radius: 5px;
}

/* Scroll Area */
QScrollArea {
    border: none;
    background-color: transparent;
}

/* Tool Tip */
QToolTip {
    background-color: #2a2a2a;
    color: #e0e0e0;
    border: 1px solid #555;
    border-radius: 4px;
    padding: 6px 10px;
}

/* Dialog */
QDialog {
    background-color: #1e1e1e;
}

/* Message Box */
QMessageBox {
    background-color: #1e1e1e;
}

QMessageBox QLabel {
    color: #e0e0e0;
}

QMessageBox QPushButton {
    min-width: 80px;
}

/* Main Window Specific Buttons */

/* Analyze/Process Button (Main action button with gradient) */
QPushButton#analyzeButton {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                                stop:0 #9333ea, stop:1 #06b6d4);
    color: white;
    border: none;
    border-radius: 8px;
    font-weight: bold;
    min-height: 50px;
}

QPushButton#analyzeButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                                stop:0 #7c3aed, stop:1 #0891b2);
}

QPushButton#analyzeButton:disabled {
    background: #555;
    color: #888;
}

/* Cancel Processing Button */
QPushButton#cancelProcessButton {
    background-color: #ef4444;
    color: white;
    border: none;
    border-radius: 6px;
    font-weight: bold;
    min-height: 40px;
}

QPushButton#cancelProcessButton:hover {
    background-color: #dc2626;
}
